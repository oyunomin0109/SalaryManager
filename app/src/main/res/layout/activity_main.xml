<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#536DFE"
        android:gravity="left|center_vertical"
        android:paddingStart="15dp"
        android:text="給料計算アプリ"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/input_scroll_view"/>

    <ScrollView
        android:id="@+id/input_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="141dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@id/result_scroll_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view">

        <TextView
            android:id="@+id/inputTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            tools:ignore="SpeakableTextPresentCheck" />
    </ScrollView>

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/result_scroll_view">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/weekdays"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:backgroundTint="#40C4FF"
                android:text="平日"
                app:cornerRadius="0dp"
                tools:ignore="TouchTargetSizeCheck" />

            <Button
                android:id="@+id/holiday"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:backgroundTint="#FF4081"
                android:text="休日差額"
                app:cornerRadius="0dp"
                tools:ignore="TouchTargetSizeCheck" />

            <Button
                android:id="@+id/customsalary"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:backgroundTint="#76FF03"
                android:text="カスタム"
                app:cornerRadius="0dp"
                tools:ignore="TouchTargetSizeCheck" />

            <Button
                android:id="@+id/allclear"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:backgroundTint="#F15151"
                android:text="AC"
                android:textSize="24sp"
                app:cornerRadius="0dp"
                tools:ignore="TouchTargetSizeCheck" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/seven"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:backgroundTint="#C8C8C8"
                android:text="7"
                android:textSize="24sp"
                app:cornerRadius="0dp"
                tools:ignore="TouchTargetSizeCheck" />

            <Button
                android:id="@+id/eight"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:backgroundTint="#C8C8C8"
                android:text="8"
                android:textSize="28sp"
                app:cornerRadius="0dp"
                tools:ignore="TouchTargetSizeCheck" />

            <Button
                android:id="@+id/nine"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:backgroundTint="#C8C8C8"
                android:text="9"
                android:textSize="28sp"
                app:cornerRadius="0dp"
                tools:ignore="TouchTargetSizeCheck" />

            <Button
                android:id="@+id/clear"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:backgroundTint="#F50057"
                android:text="C"
                android:textSize="24sp"
                app:cornerRadius="0dp"
                tools:ignore="TouchTargetSizeCheck" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/four"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:backgroundTint="#C8C8C8"
                android:text="4"
                android:textSize="28sp"
                app:cornerRadius="0dp"
                tools:ignore="TouchTargetSizeCheck" />

            <Button
                android:id="@+id/five"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:backgroundTint="#C8C8C8"
                android:text="5"
                android:textSize="28sp"
                app:cornerRadius="0dp"
                tools:ignore="TouchTargetSizeCheck" />

            <Button
                android:id="@+id/six"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:backgroundTint="#C8C8C8"
                android:text="6"
                android:textSize="28sp"
                app:cornerRadius="0dp"
                tools:ignore="TouchTargetSizeCheck" />

            <Button
                android:id="@+id/minus"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:backgroundTint="#84FFFF"
                android:text="-"
                android:textSize="28sp"
                app:cornerRadius="0dp"
                tools:ignore="TouchTargetSizeCheck" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/one"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:backgroundTint="#C8C8C8"
                android:text="1"
                android:textSize="28sp"
                app:cornerRadius="0dp"
                tools:ignore="TouchTargetSizeCheck" />

            <Button
                android:id="@+id/two"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:backgroundTint="#C8C8C8"
                android:text="2"
                android:textSize="28sp"
                app:cornerRadius="0dp"
                tools:ignore="TouchTargetSizeCheck" />

            <Button
                android:id="@+id/three"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:backgroundTint="#C8C8C8"
                android:text="3"
                android:textSize="28sp"
                app:cornerRadius="0dp"
                tools:ignore="TouchTargetSizeCheck" />

            <Button
                android:id="@+id/plus"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:backgroundTint="#FF8A80"
                android:text="+"
                android:textSize="28sp"
                app:cornerRadius="0dp"
                tools:ignore="TouchTargetSizeCheck" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/zero"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:backgroundTint="#C8C8C8"
                android:text="0"
                android:textSize="28sp"
                app:cornerRadius="0dp"
                tools:ignore="TouchTargetSizeCheck" />

            <Button
                android:id="@+id/doublezero"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:backgroundTint="#C8C8C8"
                android:text="00"
                android:textSize="28sp"
                app:cornerRadius="0dp"
                tools:ignore="TouchTargetSizeCheck" />

            <Button
                android:id="@+id/backspace"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:backgroundTint="#C8C8C8"
                android:text="⌫"
                android:textSize="24sp"
                app:cornerRadius="0dp"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

            <Button
                android:id="@+id/equal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:backgroundTint="#FFC400"
                android:text="="
                android:textSize="28sp"
                app:cornerRadius="0dp" />
        </TableRow>

    </TableLayout>

    <View
    android:id="@+id/view2"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/black"
    app:layout_constraintBottom_toTopOf="@+id/result_scroll_view"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/input_scroll_view"
    tools:ignore="SpeakableTextPresentCheck" />

    <ScrollView
        android:id="@+id/result_scroll_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/input_scroll_view"
        app:layout_constraintBottom_toTopOf="@id/tableLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/scrollConstraint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/total_time_text"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="合計時間"
                android:textAlignment="center"
                android:textColor="#536DFE"
                android:textSize="16dp"
                app:layout_constraintEnd_toStartOf="@+id/scrollview_guideline"
                app:layout_constraintHorizontal_bias="0.453"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/base_salary_text"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:text="基本給料"
                android:textAlignment="center"
                android:textColor="#40C4FF"
                android:textSize="16dp"
                app:layout_constraintEnd_toStartOf="@+id/scrollview_guideline"
                app:layout_constraintHorizontal_bias="0.453"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/total_time" />

            <TextView
                android:id="@+id/total_salary_text"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="合計金額"
                android:textAlignment="center"
                android:textColor="#FFD180"
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.464"
                app:layout_constraintStart_toStartOf="@+id/scrollview_guideline"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/holiday_salary_text"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:text="土日祝差額給料"
                android:textAlignment="center"
                android:textColor="#FF4081"
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/scrollview_guideline"
                app:layout_constraintTop_toBottomOf="@+id/total_salary" />

            <TextView
                android:id="@+id/total_time"
                android:layout_width="139dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text=""
                android:textSize="24sp"
                app:layout_constraintEnd_toStartOf="@+id/scrollview_guideline"
                app:layout_constraintHorizontal_bias="0.378"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/total_time_text"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/base_total_salary"
                android:layout_width="139dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text=""
                android:textSize="24sp"
                app:layout_constraintEnd_toStartOf="@+id/scrollview_guideline"
                app:layout_constraintHorizontal_bias="0.378"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/base_salary_text"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/total_salary"
                android:layout_width="139dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text=""
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.384"
                app:layout_constraintStart_toStartOf="@+id/scrollview_guideline"
                app:layout_constraintTop_toBottomOf="@+id/total_salary_text"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/holiday_total_salary"
                android:layout_width="139dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text=""
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.384"
                app:layout_constraintStart_toStartOf="@+id/scrollview_guideline"
                app:layout_constraintTop_toBottomOf="@+id/holiday_salary_text"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/holiday_hourly_wage"
                android:layout_width="126dp"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:text=""
                android:textAlignment="viewEnd"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/base_hourly_wage"
                app:layout_constraintTop_toBottomOf="@+id/holiday_total_salary"
                tools:ignore="MissingConstraints,SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/base_hourly_wage"
                android:layout_width="126dp"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:text=""
                android:textAlignment="viewEnd"
                app:layout_constraintEnd_toStartOf="@+id/scrollview_guideline"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/base_total_salary"
                tools:ignore="SpeakableTextPresentCheck" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/scrollview_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <ImageButton
        android:id="@+id/option_menu_button"
        android:layout_width="48dp"
        android:layout_height="52dp"
        android:layout_marginTop="16dp"
        android:background="#00FFFFFF"
        android:scaleType="centerInside"
        android:src="@drawable/list_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.973"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/save_database_button"
        android:layout_width="48dp"
        android:layout_height="52dp"
        android:layout_marginTop="16dp"
        android:background="#00FFFFFF"
        android:scaleType="centerInside"
        android:src="@drawable/save_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.82"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>